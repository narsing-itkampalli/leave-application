<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Amity University Bengaluru - Login</title>
    <style>
        :root {
            --amity-blue: #003366;
            --amity-gold: #FFD700;
            --faculty-color: #4e73df;
            --hoi-color: #1cc88a;
            --light-bg: #f8f9fc;
            --success-green: #4CAF50;
            --hover-green: #45a049;
            --error-red: #f44336;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-container {
            width: 900px;
            display: flex;
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
            border-radius: 15px;
            overflow: hidden;
        }

        .header-section {
            background: var(--amity-blue);
            color: white;
            padding: 40px;
            width: 300px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
        }

        .logo {
            width: 120px;
            margin-bottom: 20px;
        }

        .login-title {
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 10px;
            color: var(--amity-gold);
        }

        .university-name {
            font-size: 18px;
            margin-bottom: 30px;
        }

        .login-sections {
            display: flex;
            flex-direction: column;
            width: 600px;
        }

        .login-tabs {
            display: flex;
        }

        .login-tab {
            flex: 1;
            text-align: center;
            padding: 20px;
            cursor: pointer;
            font-weight: 600;
            font-size: 16px;
            transition: all 0.3s;
        }

        .faculty-tab {
            background-color: var(--faculty-color);
            color: white;
        }

        .hoi-tab {
            background-color: var(--hoi-color);
            color: white;
        }

        .login-tab.active {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .login-form {
            background-color: white;
            padding: 40px;
            flex: 1;
            display: none;
        }

        .login-form.active {
            display: block;
            animation: fadeIn 0.5s;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        .form-title {
            font-size: 22px;
            margin-bottom: 30px;
            text-align: center;
            font-weight: 600;
        }

        .faculty-form .form-title {
            color: var(--faculty-color);
        }

        .hoi-form .form-title {
            color: var(--hoi-color);
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
        }

        .form-group input {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #ddd;
            border-radius: 8px;
            font-size: 16px;
            transition: border-color 0.3s;
        }

        .form-group input:focus {
            border-color: var(--amity-blue);
            outline: none;
        }

        .login-btn {
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            margin-top: 10px;
        }

        .faculty-btn {
            background-color: var(--faculty-color);
            color: white;
        }

        .hoi-btn {
            background-color: var(--hoi-color);
            color: white;
        }

        .login-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .forgot-password {
            text-align: right;
            margin-top: 15px;
        }

        .forgot-password a {
            color: #6c757d;
            text-decoration: none;
            font-size: 14px;
        }

        .forgot-password a:hover {
            text-decoration: underline;
        }

        .error-message {
            margin-top: 12px;
            color: red;
        }

        .error-message:empty {
            display: none;
        }
    </style>
</head>

<body>
    <div class="login-container">
        <div class="header-section">
            <img src="https://th.bing.com/th/id/OIP.5593ED22F23BAD62C404E3BBC0A537D89B91D0EF?w=150&h=150&c=7&r=0&o=5&pid=1.7"
                alt="Amity University Logo" class="logo">
            <div class="login-title">Login Portal</div>
            <div class="university-name">Amity University Bengaluru</div>
        </div>

        <div class="login-sections">
            <div class="login-tabs">
                <div class="login-tab faculty-tab active" onclick="showLoginForm('faculty')">Faculty Login</div>
                <div class="login-tab hoi-tab" onclick="showLoginForm('hoi')">HOI Login</div>
            </div>

            <div class="login-form faculty-form active">
                <div class="form-title">Faculty Login</div>
                <form>
                    <div class="form-group">
                        <label for="faculty-username">Username</label>
                        <input type="text" id="faculty-username" placeholder="Enter your username" required>
                    </div>
                    <div class="form-group">
                        <label for="faculty-password">Password</label>
                        <input type="password" id="faculty-password" placeholder="Enter your password" required>
                    </div>
                    <button type="submit" class="login-btn faculty-btn">Login</button>
                    <div class="error-message" id="faculty-error-message"></div>
                    <div class="forgot-password">
                        <a href="#">Forgot Password?</a>
                    </div>
                </form>
            </div>

            <div class="login-form hoi-form">
                <div class="form-title">HOI Login</div>
                <form>
                    <div class="form-group">
                        <label for="hoi-username">Username</label>
                        <input type="text" id="hoi-username" placeholder="Enter your username" required>
                    </div>
                    <div class="form-group">
                        <label for="hoi-password">Password</label>
                        <input type="password" id="hoi-password" placeholder="Enter your password" required>
                    </div>
                    <button type="submit" class="login-btn hoi-btn">Login</button>
                    <div class="error-message" id="hoi-error-message"></div>
                    <div class="forgot-password">
                        <a href="#">Forgot Password?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="./js/required.js"></script>
    <script src="/js/login.js"></script>

    <script>
        function showLoginForm(formType) {
            // Update tabs
            document.querySelector('.faculty-tab').classList.remove('active');
            document.querySelector('.hoi-tab').classList.remove('active');
            document.querySelector(`.${formType}-tab`).classList.add('active');

            // Update forms
            document.querySelector('.faculty-form').classList.remove('active');
            document.querySelector('.hoi-form').classList.remove('active');
            document.querySelector(`.${formType}-form`).classList.add('active');
        }
    </script>
</body>

</html>